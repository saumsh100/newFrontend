{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "parser": "babel",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "bracketSpacing": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.scss",
      "options": {"parser": "scss"}
    },
    {
      "files": "*.md",
      "options": {"parser": "markdown"}
    },
    {
      "files": "*.mdx",
      "options": {"parser": "mdx"}
    }
  ]
}
